{
  "name": "unglud/dusker",
  "description": "Stand alone Laravel Dusk test suit, which do not require Laravel framework itself.",
  "keywords": [
    "laravel",
    "testing",
    "webdriver"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Aleksandr Matrosov",
      "email": "unglud@gmail.com"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "prefer-stable": true,
  "require": {
    "php": ">=7.0",
    "composer/composer": "^1.0",
    "illuminate/config": "^5.8",
    "illuminate/container": "^5.8",
    "illuminate/events": "^5.8",
    "illuminate/filesystem": "^5.8",
    "illuminate/support": "^5.8",
    "laravel/dusk": "v5.1.0",
    "phpunit/phpunit": "^6.0",
    "symfony/filesystem": "^4.1",
    "symfony/http-kernel": "^4.1",
    "vlucas/phpdotenv": "^2.4"
  },
  "require-dev": {
    "mikey179/vfsStream": "^1.6",
    "mockery/mockery": "^1.0"
  },
  "scripts": {
    "post-install-cmd": [
      "Dusker\\CopyFile::copy"
    ],
    "post-update-cmd": [
      "Dusker\\CopyFile::copy"
    ]
  },
  "extra": {
    "copy-file": {
      "src/example/": "../../../tests/",
      ".env.example": "../../../.env.dusk",
      "artisan": "../../../artisan"
    }
  },
  "autoload": {
    "files": [
      "src/helpers.php"
    ],
    "psr-4": {
      "Dusker\\": "./src/Dusker",
      "Illuminate\\Foundation\\Testing\\": "./src/Illuminate/Foundation/Testing",
      "Tests\\": "../../../tests"
    }
  }
}
